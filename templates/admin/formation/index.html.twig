{% extends "base.admin.html.twig" %}

{% block titre %}Gestion des formations
{% endblock %}

{% block body %}

	<div class="card">
		<br>
		<div class="card-hearder text-center">
			<h2>Gestion des formations</h2>
		</div>

		<div>
			<a href="{{ path("admin_formation_creation") }}" class="btn btn-primary float-right btnAction">Ajouter une formation</a>
		</div>
		<div class="card-body">
			<table id="example" class="table table-striped nowrap" style="width:100%">
				<thead>
					<tr>
						<th>Image</th>
						<th>Titre</th>
						<th>Description</th>
						<th>Place</th>
						<th>DatePublication</th>
						<th>DateDebut</th>
						<th>DateFin</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for formation in formations %}
						<tr>
							<td>
								{% if formation.image %}
									<img src="{{ asset("images/"~formation.image) }}" width="50px" alt="">
								{% endif %}
							</td>
							<td>{{formation.titre}}</td>
							<td>{{formation.description|slice(0, 10)}}</td>
							<td>{{formation.nombrePlace}}</td>
							<td>{{formation.datePublication|date("m-d-Y")}}</td>
							<td>{{formation.dateDebutFormation|date("m-d-Y")}}</td>
							<td>{{formation.dateFinFormation|date("m-d-Y")}}</td>
							<td>
								<a href="{{ path("admin_formation_edition", {id: formation.id}) }}" class="btn btn-primary">Editer</a>
								<a href="{{ path("admin_formation_suppression", {id: formation.id}) }}" class="btn btn-danger" onclick="return confirm('Etes vous sur de vouloir supprimer cette formation ?')">Supprimer</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	<script>
		$(document).ready(function () {
$('#example').DataTable();
});
	</script>
{% endblock %}
