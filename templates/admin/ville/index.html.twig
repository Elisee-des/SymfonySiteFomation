{% extends "base.admin.html.twig" %}

{% block titre %}Gestion des villes
{% endblock %}

{% block content_title %}
	Gestion des villes
{% endblock %}


{% block content_buttons %}
			<a href="{{ path("admin_exportation_ville") }}" class="btn btn-outline-info  float-right">Exporter des villes</a>
			<a href="{{ path("admin_importation_ville") }}" class="btn btn-outline-secondary float-right">Importer des villes</a>
			<a href="{{ path("admin_creation_ville") }}" class="btn btn-outline-primary btn-actions float-right">Ajouter une ville</a>
{% endblock %}
{% block body %}

	<div class="card">
		<br>

		<div class="mb-1">
		</div>
		<div class="card-body">
			<table id="example" class="table table-striped">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Nom</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for ville in villes %}
						<tr>
							<td scope="row">{{ville.id}}</td>
							<td>{{ville.nom}}</td>
							<td>
								<a href="{{ path("admin_edition_ville", {id: ville.id}) }}" class="btn btn-outline-primary btn-actions ">Editer</a>
								<a href="{{ path("admin_suppresion_ville", {id: ville.id}) }}" class="btn btn-outline-danger" onclick="return confirm('Etes vous sur de vouloir supprimer cette ville ?')">Supprimer</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
	{% block javascripts %}

		<script>
			$(document).ready(function () {
				$('#example').DataTable();
			});
		</script>
	{% endblock %}
